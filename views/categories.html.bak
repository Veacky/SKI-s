<div class="row">
	{foreach from=$categories item=cat}
		<div class="col-md-2" id="{$cat.name}">
			<div class="thumbnail">
			  <img src="img/{$cat.name}" alt="{$cat.name}">
			  <div class="caption">
				<h3>{$cat.name}</h3>
				<p>{$cat.desc}</p>
			  </div>
			</div>
		  </div>
{/foreach}
</div>