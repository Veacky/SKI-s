
<div class="row">
	<p>Cliquez sur une marque pour en afficher les skis.</p>
</div>

<div class="row">
	{foreach from=$brands item=brand}
		<div class="col-md-2" id="{$brand.brand}">
			<div class="thumbnail">
			  <img src="img/{$brand.brand}" alt="{$brand.brand}">
			  <div class="caption">
				<h3>{$brand.brand}</h3>
			  </div>
			</div>
		  </div>
{/foreach}
</div>